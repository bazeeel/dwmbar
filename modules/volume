#!/usr/bin/env sh

case $BLOCK_BUTTON in
		1) setsid "$TERMINAL" -e alsamixer & ;;
			2) amixer set Master toggle ;;
				4) amixer set Master 10%+ ;;
					5) amixer set Master 10%- ;;
						3) pgrep -x dunst >/dev/null && notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
							- Middle click to mute.
							- Scroll to change."
					esac

					volstat="$(amixer get Master)"

					echo "$volstat" | grep "\[off\]" >/dev/null && printf "ðŸ”‡\\n" && exit

					vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g')

					if [ "$vol" -gt "70" ]; then
							icon="ðŸ”Š"
						elif [ "$vol" -lt "30" ]; then
								icon="ðŸ”ˆ"
							else
									icon="ðŸ”‰"
					fi

					printf "%s %s%%\\n" "$icon" "$vol"


